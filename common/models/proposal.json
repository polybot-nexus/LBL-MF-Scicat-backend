{
    "name": "Proposal",
    "description": "Defines the purpose of an experiment and links an experiment to principal investigator and main proposer",
    "base": "Ownable",
    "strict": true,
    "idInjection": false,
    "options": {
        "validateUpsert": true
    },
    "properties": {
        "proposalId": {
            "type": "string",
            "id": true,
            "required": true,
            "description": "Globally unique identifier of a proposal, eg. PID-prefix/internal-proposal-number. PID prefix is auto prepended"
        },
        "pi_email": {
            "type": "string",
            "index": true,
            "description": "Email of principal investigator"
        },
        "pi_firstname": {
            "type": "string",
            "description": "First name of principal investigator"
        },
        "pi_lastname": {
            "type": "string",
            "description": "Last name of principal investigator"
        },
        "email": {
            "type": "string",
            "required": true,
            "description": "Email of main proposer"
        },
        "firstname": {
            "type": "string",
            "description": "First name of main proposer"
        },
        "lastname": {
            "type": "string",
            "description": "Last name of main proposer"
        },
        "title": {
            "type": "string"
        },
        "abstract": {
            "type": "string"
        },
        "startTime": {
            "type": "Date"
        },
        "endTime": {
            "type": "Date"
        }
    },
    "validations": [],
    "relations": {
        "measurementPeriods": {
            "type": "embedsMany",
            "model": "MeasurementPeriod",
            "property": "MeasurementPeriodList",
            "options": {
                "validate": false,
                "forceId": false,
                "persistent": true
            }
        },
        "attachments": {
            "type": "hasMany",
            "model": "Attachment",
            "foreignKey": ""
        }
    },
    "acls": [{
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "ALLOW",
            "property": "findById"
        },
        {
            "accessType": "*",
            "principalType": "ROLE",
            "principalId": "proposalingestor",
            "permission": "ALLOW"
        },
        {
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "DENY",
            "property": "findByInstrumentAndDate"
        },
        {
            "principalType": "ROLE",
            "principalId": "ingestor",
            "permission": "ALLOW",
            "property": "findByInstrumentAndDate"
        }
    ],
    "methods": {
        "findByInstrumentAndDate": {
            "accepts": [{
                    "arg": "instrument",
                    "type": "string"
                },
                {
                    "arg": "measureTime",
                    "type": "date"
                },
                {
                    "arg": "options",
                    "type": "object",
                    "http": "optionsFromRequest"
                }
            ],
            "returns": {
                "arg": "findByInstrumentAndDate",
                "type": "Object"
            },
            "description": "Find proposal that took data at specified instrument and time",
            "http": {
                "path": "/findByInstrumentAndDate",
                "verb": "get"
            }
        },
        "searchText": {
            "accepts": [{
                "arg": "options",
                "type": "object",
                "http": "optionsFromRequest"
            }],
            "returns": {
                "arg": "searchText",
                "type": "Object"
            },
            "description": "Search text inside proposal",
            "http": {
                "path": "/searchText",
                "verb": "get"
            }
        }
    }
}
